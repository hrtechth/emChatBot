<!DOCTYPE html>
<html>
<head>
    <title>SF Register</title>
    <meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1, maximum-scale=1">
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>
</head>
<body>

<div class="container">
    <div class="row">
        <div class="col s12 m7">
            <form action="/webviews/save" method="get">
                <div class="card">
                    <div class="card-image">
                    <img src="https://www.riverbed.com/wp-content-partner/uploads/2017/09/Register-button.jpg">
                    <span class="card-title"></span>
                    </div>
                    <div class="card-content">
                            <input type="hidden" name="psid" id="psid">
                            <div class="row">
                                <div class="input-field col s12">
                                <input placeholder="Input SF User ID" type="text" name="sfinput" id="tbSfinput" class="validate">
                                <label for="tbSfinput">SF User ID</label>
                                </div>
                            </div>
                    </div>
                    <div class="card-action">
                            <button id="submitButton" class="btn waves-effect waves-light " type="submit" name="action">Submit
                                    <i class="material-icons right">send</i>
                            </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    (function(d, s, id){
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) {return;}
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.com/en_US/messenger.Extensions.js";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'Messenger'));


    window.extAsyncInit = function() {
        // the Messenger Exstensions JS SDK is done loading
        MessengerExtensions.getContext('223820597674431',
            function success(thread_context){
                $('#psid').val(thread_context.psid);
                $.getJSON('/webviews/settings?psid=' + thread_context.psid, function (data) {
                    if(data.sf_id){
                        $('#tbSfinput').val(data.sf_id);
                        document.getElementById("tbSfinput").disabled = true;
                    } else {
                        document.getElementById("tbSfinput").disabled = false;
                    }
                });
            },
            function error(err){
                console.log("Error");
            }
        );
        $('#submitButton').click(function() {
            MessengerExtensions.requestCloseBrowser(function success() {
                // webview closed
            }, function error(err) {
                // an error occured
            });
        });
    };        
</script>
</body>
</html>